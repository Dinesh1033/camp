<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center"> create new campground </h1>

        <div style="width: 30%;margin: 0 auto;">
            <form action="/campgrounds/<%=camp._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control"type="text" name="camp[name]" value="<%= camp.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="camp[price]" value="<%= camp.price %>">
                </div>
                <div class="form-group">
                    <input class="form-control"type="text" name="camp[image]" value="<%= camp.image%>">
                 </div>
                 <div class="form-group">
                    <input class="form-control"type="text" name="camp[description]" value="<%= camp.description%>">
                 </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">submit</button>
                </div>
            </form>
        </div>
       

    </div>
    

</div>
